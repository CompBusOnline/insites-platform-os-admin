{%- include 'layout/constants' -%}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
  
  <meta name="description" content="{{ desc }}">
  <title>{{ pagetitle }}</title>
	{%- include 'layout/insites_admin/dependencies' -%}
</head>
<style>
  .marginBottom {
    position: relative;
    display: block;
    bottom: 125px;
  }
</style>
<body class="sign-in-wrapper">
  <div class="welcome-wrap">
    <div class="welcome-logo-wrap">
      <img class="welcome-logo" src="{{ 'insites_admin/images/Insites_logo.svg' | asset_url }}" alt="Insites Logo" />
    </div>
    <h1>Welcome to your Insites Platform</h1>
    <p>Online Digital Platform</p>
  </div>
  
  <div class="sign-in content-wrap">
    <div class="sign-in form-wrap">
      <div class="sign-in form-wrap logo-wrap">
        <img class="sign-in form-wrap logo"
          src="{{ 'insites_admin/images/FNS-Logo-RGB.svg' | asset_url }}"
          alt="Sign In Logo" />
      </div>
      {{ content_for_layout }}
    </div>
  </div>

  <script>
    $(document).foundation();

    $(function(){
        var $input = $('input');
        var platform = getPlatform();

        $input.on('focus', function(){ 
            $(this).closest('label').addClass('active');
            
            // for android only
          if (platform === 'android') { 
            $('.sign-in-wrapper').addClass('marginBottom');
          } 

        }).on('blur', function(){
            $(this).closest('label').removeClass('active');

            // for android only
            if (platform === 'android') { 
              $('.sign-in-wrapper').removeClass('marginBottom');
            } 
        });

       function getPlatform() {
          if(navigator != undefined && navigator.userAgent != undefined) {
              user_agent = navigator.userAgent.toLowerCase();
              if(user_agent.indexOf('android') > -1) { // Is Android.
                  return 'android';
              }
          }
       }
    });
  </script>
</body>
</html>
