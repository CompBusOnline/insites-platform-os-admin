---
slug: admin/styleguide/filters
layout_name: insites_admin/insites_empty
format: html
---
<style>
body {
    margin: 0;
    font-family: 'Open Sans', sans-serif;
    background-color: transparent;
}
h2.section-title {
    font-family: "Open Sans", sans-serif;
    padding-bottom: 10px;
    font-weight: 600;
    font-size: 18px;
    border-bottom: solid 1px #eee;
    margin: 40px 0 0px;
    color: #2C3148;
}
@media (max-width: 1024px) {
    .ins-styleguide-actual-slot-wrap,
    .ins-styleguide-code-slot-wrap {
      width: 100%;
      float: none;
    }
    #filterSection .ins-styleguide-wrap .ins-styleguide-actual-slot-wrap,
    #filterSection .ins-styleguide-wrap .ins-styleguide-code-slot-wrap {
       overflow: initial;
    }
  }
@media only screen and (max-width: 320px) {
    .content-wrap {
        padding: 0;
    }
}
</style>

<div id="filterSection">
    <h2 class="section-title">Complete Example</h2>
    <ins-styleguide class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter with-date-filter date-title="Date Period">
                {% assign name="Status"%}

                <ins-filter-item 
                    id="filterID" 
                    name="{{ name }}" 
                    options='[
                        "All Status", 
                        "Pending", 
                        "Completed", 
                        "Declined"
                    ]'>
                </ins-filter-item>
            </ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
        <div>
            <p><strong>HTML: <strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter with-date-filter date-title="Date Period">
    <ins-filter-item 
        name="Status"
        options='[
            "All Status", 
            "Pending", 
            "Completed", 
            "Declined"
        ]'>
    </ins-filter-item>
</ins-filter>
            </script>
            <br /><p><strong>LIQUID: <strong></p>
            <script type="text/plain" class="language-markup">{%raw%}
<ins-filter with-date-filter date-title="Date Period">
    {% assign name="Status"%}

    <ins-filter-item 
        name="{{ name }}" 
        options='[
            "All Status", 
            "Pending", 
            "Completed", 
            "Declined"
        ]'>
    </ins-filter-item>
            {%endraw%}</script>
        </div>
        </ins-styleguide-code>
    </ins-styleguide>
    <h2 class="section-title">ins-filter</h2>
    <ins-styleguide label="Default State" class="equal-width">
        <!--
            dateFrom
            dateTo
            dateOpt
            -->
        <ins-styleguide-actual slot="actual">
            <ins-filter></ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
            <script type="text/plain" class="language-markup">
<ins-filter></ins-filter>
            </script>
        </ins-styleguide-code>
    </ins-styleguide>
    <ins-styleguide label="Direct Set Data" class="equal-width">
        <!--
            can't update options on ins-filter-item
            -->
        <ins-styleguide-actual slot="actual">
            <ins-filter id="directDataSourceFilter"></ins-filter>
            {% assign defaultDate="Last Year"%}
            {% assign dateTitle="Direct Set Value"%}

            <script>
                setTimeout(function () {
                    ins('#directDataSourceFilter').val('withDateFilter', true);
                    ins('#directDataSourceFilter').val('defaultDate', '{{ defaultDate }}');
                    ins('#directDataSourceFilter').val('dateTitle', '{{ dateTitle }}');
                }, 500);
            </script>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
        <div>
            <p><strong>HTML: </strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter id="directDataSourceFilter"></ins-filter>

<script src="/assets/js/ins.js">&lt;/script&gt;
<script>
// setTimeout is used to avoid race conditions
setTimeout(function(){
    ins('#directDataSourceFilter').val('withDateFilter', true);
    ins('#directDataSourceFilter').val('defaultDate', 'Last Year');
    ins('#directDataSourceFilter').val('dateTitle', 'Direct Set Value');
// update `withDataFilter`, `defaultData` and `dateTitle` attribute of the component
}, 500);
&lt;/script&gt;
            </script>
            <br /><p><strong>LIQUID: </strong></p>
            <script type="text/plain" class="language-markup">{%raw%}
{% assign defaultDate="Last Year"%}
{% assign dateTitle="Direct Set Value"%}

<ins-filter id="directDataSourceFilter"></ins-filter>

<script>
    
    setTimeout(function () {
        ins('#directDataSourceFilter').val('withDateFilter', true);
        ins('#directDataSourceFilter').val('defaultDate', '{{ defaultDate }}');
        ins('#directDataSourceFilter').val('dateTitle', '{{ dateTitle }}');
    }, 500);
&lt;/script&gt;
            {%endraw%}</script>
        </div>
        </ins-styleguide-code>
    </ins-styleguide>

    <ins-styleguide label="Static Data Source" class="equal-width">
        <ins-styleguide-actual slot="actual">
            {% assign date-title="Custom Date Filter Title"%}
            {% assign default-date="Last Year"%}

            <ins-filter 
                with-date-filter
                date-title="{{ date-title }}"
                default-date="{{ default-date }}">
            </ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
        <div>
            <p><strong>HTML: </strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter with-date-filter
            date-title="Custom Date Filter Title"
            default-date="Last Year">
</ins-filter>
            </script>
            <br /><p><strong>LIQUID: </strong></p>
            <script type="text/plain" class="language-markup">{%raw%}
{% assign date-title="Custom Date Filter Title"%}
{% assign default-date="Last Year"%}

<ins-filter 
    with-date-filter
    date-title="{{ date-title }}"
    default-date="{{ default-date }}">
</ins-filter>
            {%endraw%}</script>
        </div>
        </ins-styleguide-code>
    </ins-styleguide>
    <h2 class="section-title">ins-filter-item</h2>
    <ins-styleguide label="Default State" class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter>
                <ins-filter-item></ins-filter-item>
            </ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
            <script type="text/plain" class="language-markup">
<ins-filter></ins-filter>
            </script>
        </ins-styleguide-code>
    </ins-styleguide>
    <ins-styleguide label="Direct Set Data" class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter>
                <ins-filter-item id="directSetDataFilterItem"></ins-filter-item>
            </ins-filter>
            <script>
                var options;

                setTimeout(function () {
                    $.ajax({
                        type: "GET",
                        async: false,
                        url: '/styleguide/data/filter-options1.json',
                        success: function(response){
                            options = response;
                            console.log('options', options);
                        }
                    });

                    ins('#directSetDataFilterItem').val('name', 'Position');
                    ins('#directSetDataFilterItem').val('options', options);
                }, 500);
            </script>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
        <div>
            <p><strong>HTML: </strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter>
    <ins-filter-item id="directSetDataFilterItem"></ins-filter-item>
</ins-filter>

<script src="/assets/js/ins.js">&lt;/script&gt;
<script>
    // setTimeout is used to avoid race conditions
    setTimeout(function(){
        ins('#directSetDataFilterItem').val('name', 'Position');
        ins('#directSetDataFilterItem').val('options', '["CEO", "Manager"]');
    // update `name` and `options` attribute of the component
    }, 500);
&lt;/script&gt;
            </script>
            <br /><p><strong>LIQUID: </strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter>
    <ins-filter-item id="directSetDataFilterItem"></ins-filter-item>
</ins-filter>

<script>
    var options;
