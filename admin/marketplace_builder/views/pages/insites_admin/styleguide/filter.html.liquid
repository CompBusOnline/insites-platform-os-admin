    {% assign name="Operating System"%}

    <ins-filter-item 
        name="{{ name }}" 
        options='https://stencilize-pos.staging-sydney.near-me.com/styleguide/data/filter-options.json'>
    </ins-filter-item>
</ins-filter>
            {%endraw%}</script>
        </div>
        </ins-styleguide-code>
    </ins-styleguide>
</div>
