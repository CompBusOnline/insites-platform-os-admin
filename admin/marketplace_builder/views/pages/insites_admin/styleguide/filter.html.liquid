            {%endraw%}</script>
        </div>
        </ins-styleguide-code>
    </ins-styleguide>
    <ins-styleguide label="Static Data Source" class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter>
                {% assign name="Operating System"%}
                <ins-filter-item name="{{ name }}" options='["Windows", "macOS", "Linux"]'></ins-filter-item>
            </ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
        <div>
            <p><strong>HTML: </strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter>
    <ins-filter-item 
        name="Operating System"
        options='[
            "Windows", 
            "macOS", 
            "Linux"
        ]'>
    </ins-filter-item>
</ins-filter>
            </script>
            <br /><p><strong>LIQUID: </strong></p>
            <script type="text/plain" class="language-markup">{%raw%}
