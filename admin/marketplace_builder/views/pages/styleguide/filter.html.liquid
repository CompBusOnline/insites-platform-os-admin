</ins-filter-item>
            {%endraw%}</script>
        </div>
        </ins-styleguide-code>
    </ins-styleguide>
    <h2 class="section-title">ins-filter</h2>
    <ins-styleguide label="Default State" class="equal-width">

        <ins-styleguide-actual slot="actual">
            <ins-filter></ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
            <script type="text/plain" class="language-markup">
<ins-filter></ins-filter>
            </script>
        </ins-styleguide-code>
    </ins-styleguide>
    <ins-styleguide label="Direct Set Data" class="equal-width">

        <ins-styleguide-actual slot="actual">
            <ins-filter id="directDataSourceFilter"></ins-filter>
            <script>
                {% assign defaultDate="Last Year"%}
                {% assign dateTitle=""%}
                setTimeout(function () {
                    ins('#directDataSourceFilter').val('withDateFilter', true);
                    ins('#directDataSourceFilter').val('defaultDate', 'Last Year');
                    ins('#directDataSourceFilter').val('dateTitle', 'Direct Set Value');
                }, 500);
            </script>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
            <script type="text/plain" class="language-markup">
<ins-filter id="directDataSourceFilter"></ins-filter>

<script src="/assets/js/ins.js">&lt;/script&gt;
<script>
// setTimeout is used to avoid race conditions
setTimeout(function(){
    ins('#directDataSourceFilter').val('withDateFilter', true);
    ins('#directDataSourceFilter').val('defaultDate', 'Last Year');
    ins('#directDataSourceFilter').val('dateTitle', 'Direct Set Value');
// update `withDataFilter`, `defaultData` and `dateTitle` attribute of the component
}, 500);
&lt;/script&gt;
            </script>
        </ins-styleguide-code>
    </ins-styleguide>
    <ins-styleguide label="Static Data Source" class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter with-date-filter
                        date-title="Custom Date Filter Title"
                        default-date="Last Year">
            </ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
            <script type="text/plain" class="language-markup">
<ins-filter with-date-filter
            date-title="Custom Date Filter Title"
            default-date="Last Year">
</ins-filter>
            </script>
        </ins-styleguide-code>
    </ins-styleguide>
    <h2 class="section-title">ins-filter-item</h2>
    <ins-styleguide label="Default State" class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter>
                <ins-filter-item></ins-filter-item>
            </ins-filter>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
            <script type="text/plain" class="language-markup">
<ins-filter></ins-filter>
            </script>
        </ins-styleguide-code>
    </ins-styleguide>
    <ins-styleguide label="Direct Set Data" class="equal-width">
        <ins-styleguide-actual slot="actual">
            <ins-filter>
                <ins-filter-item id="directSetDataFilterItem"></ins-filter-item>
            </ins-filter>
            <script>
                var options;
                setTimeout(function () {
                    $.ajax({
                        type: "GET",
                        async: false,
                        url: '/styleguide/data/filter-options.json',
                        success: function(response){
                            options = response;
                            console.log('options', options);
                        }
                    });
                    ins('#directSetDataFilterItem').val('name', 'Operating System');
                    ins('#directSetDataFilterItem').val('options', options);
                }, 500);
            </script>
        </ins-styleguide-actual>
        <ins-styleguide-code slot="code">
        <div>
            <p><strong>HTML: </strong></p>
            <script type="text/plain" class="language-markup">
<ins-filter>
    <ins-filter-item id="directSetDataFilterItem"></ins-filter-item>
</ins-filter>

<script src="/assets/js/ins.js">&lt;/script&gt;
<script>
    // setTimeout is used to avoid race conditions
    setTimeout(function(){
        ins('#directSetDataFilterItem').val('name', 'Operating System');
        ins('#directSetDataFilterItem').val('options', '["Windows", "macOS", "Linux"]');
    // update `name` and `options` attribute of the component
    }, 500);
&lt;/script&gt;
            </script>
            <br /><p><strong>LIQUID: </strong></p>
            <script type="text/plain" class="language-markup">
